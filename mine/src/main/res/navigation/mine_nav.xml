<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mine_nav"
    app:startDestination="@id/mineFragment">

    <fragment
        android:id="@+id/mineFragment"
        android:name="com.zj.mine.ui.MineFragment"
        android:label="MineFragment"
        tools:layout="@layout/fragment_mine" >
        <action
            android:id="@+id/action_mineFragment_to_userInfoFragment"
            app:destination="@id/userInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/userInfoFragment"
        android:name="com.zj.mine.ui.UserInfoFragment"
        tools:layout="@layout/fragment_user_info"
        android:label="UserInfoFragment" >
        <argument
            android:name="info"
            app:argType="com.zj.mine.net.UserInfoRsp" />
    </fragment>
</navigation>